---

const perfiles = [
  {
    id: 1,
    nombre: "Camila Torres",
    descripcion: "Estudiante universitaria que necesita apoyo para continuar sus estudios.",
    tipo: "estudiante",
    foto: "https://randomuser.me/api/portraits/women/45.jpg"
  },
  {
    id: 2,
    nombre: "Carlos Gutiérrez",
    descripcion: "Persona en situación de calle que busca abrigo y alimento.",
    tipo: "indigente",
    foto: "https://randomuser.me/api/portraits/men/60.jpg"
  },
  {
    id: 3,
    nombre: "Rosa Martínez",
    descripcion: "Adulto mayor con enfermedad crónica, necesita medicamentos.",
    tipo: "enfermo",
    foto: "https://randomuser.me/api/portraits/women/70.jpg"
  }
];

---

<section class="px-4 py-8 max-w-7xl mx-auto">
  <h2 class="text-2xl font-bold text-center mb-8">Exploración de Perfiles</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    {perfiles.map((perfil) => (
      <div
        class="bg-white rounded-2xl shadow-md p-6 text-center flex flex-col items-center transition hover:scale-105 hover:shadow-lg"
      >
        <img
          src={perfil.foto}
          alt={`Foto de ${perfil.nombre}`}
          class="w-24 h-24 rounded-full object-cover mb-4"
        />
        <h3 class="text-lg font-semibold mb-2">{perfil.nombre}</h3>
        <p class="text-sm text-gray-600">{perfil.descripcion}</p>
        {/* aca que vayan un boton de  */}
      </div>
    ))}
  </div>
</section>

