---
const {
  imagen = "/icono-default.svg",
  titulo = "Título del paso",
  texto = "Descripción breve de este paso del proceso."
} = Astro.props;
---

<div class="flex flex-col items-center text-center bg-white shadow rounded-2xl p-6 transition-transform hover:scale-[1.02] duration-300">
  <img src={imagen} alt={titulo} class="w-16 h-16 mb-4" />
  <h3 class="text-lg font-semibold text-gray-800 mb-2">{titulo}</h3>
  <p class="text-gray-600 text-sm">{texto}</p>
</div>
